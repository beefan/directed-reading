{
  "name": "Directed Reading",
  "description" : "a directed reading assistant to enable focused attention",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "stage.html"
 },
  "icons": { 
    "16": "logo_16.png",
    "32": "logo_32.png",
    "48": "logo_48.png",
    "64": "logo_64.png",
   "128": "logo_128.png" 
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}