{
  "name": "Directed Reading",
  "short_name": "read fast",
  "description" : "a pacer for your attention",
  "version": "0.7",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "stage.html",
    "default_title": "double click some text!"
 },
  "icons": { 
    "16": "logo_16.png",
    "32": "logo_32.png",
    "48": "logo_48.png",
    "64": "logo_64.png",
   "128": "logo_128.png" 
  },
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}